datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // This URL will be from MongoDB Atlas
}

generator client {
  provider = "prisma-client-js"
}

model ChatHistory {
  id        String   @id @default(uuid()) @map("_id")
  timestamp String
  messages  Message[]
}

model Message {
  id      String @id @default(uuid()) @map("_id")
  role    String
  content String
  chatId  String
  chat    ChatHistory @relation(fields: [chatId], references: [id])
}
